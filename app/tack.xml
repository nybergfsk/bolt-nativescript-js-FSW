<Page loaded="pageLoaded" xmlns="http://www.nativescript.org/tns.xsd" xmlns:ns="nativescript-vue" class="bg-gray-100 min-h-full">
    <ActionBar title="Tack!" class="bg-lime-600 text-white shadow-md">
        <!-- ActionBar -->
    </ActionBar>
    <ScrollView>
        <StackLayout class="flex flex-col items-center justify-center p-6 space-y-4">
            <Label text="Tack" 
                   class="text-3xl font-bold text-center text-gray-900" 
                   textWrap="true" />
            <Label text="Vi återkommer till dig inom kort :)" 
                   class="text-lg text-center text-gray-700" 
                   textWrap="true" />
            <!-- Botón para regresar -->
            <Button text="Tillbaka till formuläret" 
                    class="bg-lime-500 text-white py-2 px-4 rounded shadow-md"
                    tap="navigateToSupportPage" />
        </StackLayout>
    </ScrollView>
</Page>
